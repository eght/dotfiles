[general]
accounts = Gmail

[Account Gmail]
localrepository = Local
remoterepository = Remote
autorefresh = 1
postsynchook = ~/script/sh/offlineimap-postsync.sh

[Repository Local]
type = Maildir
localfolders = ~/Maildir

[Repository Remote]
type = Gmail
folderfilter = lambda foldername: foldername in ["INBOX", "[Gmail]/Drafts"]
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
maxconnections = 1
realdelete = no
