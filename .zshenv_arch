PATH=$PATH:$HOME/.gem/ruby/2.2.0/bin

# export PATH=/usr/local/bin:$PATH

# OZ
export PATH=/opt/mozart2/bin:$PATH
export OZEMACS=/usr/local/bin/emacs
export OZHOME=/opt/mozart2

# Cool
# export PATH=/usr/class/cs143/cool/bin:$PATH

# Haskell
export PATH=$HOME/.cabal/bin:$PATH

# Scala 
# export PATH=$HOME/app/sbt/bin:$PATH
# export PATH=$HOME/app/scala/bin:$PATH
# export SCALA_HOME=$HOME/app/scala

# Java
export JUNIT_HOME=/usr/share/java
export CLASSPATH=$JUNIT_HOME/junit.jar:$CLASSPATH
export PATH=/usr/share/eclipse:$PATH

# Python
export PYTHONPATH=$PYTHONPATH:~/.emacs.d/el-get/repo/rope
