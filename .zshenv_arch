# alias touchpad_enable='xinput --set-prop "SynPS/2 Synaptics TouchPad" "Device Enabled" 1'

# lock slim
alias lock='slimlock'

# アンチエイリアス
# export JAVA_FONTS=/usr/share/fonts/TTF
